<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardadmin"
        app:cardCornerRadius="8dp"
        android:background="@drawable/edittext_background"
        app:cardElevation="5dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pdfviewadmin"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/bikelogo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/PrimaryColor"
                android:layout_below="@+id/pdfviewadmin"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/lato"
                    android:lines="1"
                    android:text="Example.pdf"
                    android:textColor="@color/white"
                    android:textSize="21dp" />
                <View
                    android:id="@+id/view30056"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Username"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:fontFamily="@font/plus"
                        android:text="User Name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderedusername"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:fontFamily="@font/plus"
                        android:text="Mukilan"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/oderid23"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:fontFamily="@font/plus"
                        android:text="Contact No"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phnocontact"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:fontFamily="@font/plus"
                        android:text="#25342"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>