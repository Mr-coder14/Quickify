<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Reportissueactivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uyo"
        android:orientation="horizontal"
        android:background="@drawable/gradient_header_bg"
        android:padding="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="20dp">

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/backbtni"
            android:src="@drawable/back"
            android:background="@drawable/circular_button_bg"
            android:padding="8dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report Form"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:letterSpacing="0.02"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Vehicle Type Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/lato"
                    android:text="Select Vehicle Type"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Four Wheeler Card -->
                <LinearLayout
                    android:id="@+id/fourwheeler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/pink_banner_enhanced"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circular_icon_bg"
                        android:padding="12dp"
                        android:src="@drawable/carlogo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="Four Wheeler"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/tickfour"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/check_circle_bg"
                        android:padding="4dp"
                        android:src="@drawable/baseline_check_24" />
                </LinearLayout>

                <!-- Two Wheeler Card -->
                <LinearLayout
                    android:id="@+id/twowheeler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/blue_banner_enhanced"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circular_icon_bg"
                        android:padding="12dp"
                        android:src="@drawable/bikelogo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="Two Wheeler"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ticktwo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/check_circle_bg"
                        android:padding="4dp"
                        android:src="@drawable/baseline_check_24" />
                </LinearLayout>

                <!-- Image Upload Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/lato"
                    android:text="Upload Vehicle Image"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Upload Area using FrameLayout -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/upload_area_bg">

                    <ImageView
                        android:id="@+id/uploadimage1"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:alpha="0.6"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/uploadimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/upload"
                        android:visibility="gone" />

                </FrameLayout>

                <Button
                    android:id="@+id/buttonUpload"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/primary_button_bg"
                    android:fontFamily="@font/lato"
                    android:text="📸 Upload Vehicle Image"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Address Section -->
            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/lato"
                android:text="📍 Current Address"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/address_card_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/ratiobtnaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/plus"
                    android:lineSpacingExtra="2dp"
                    android:text="Velammal Institute of Technology&#10;74VX+QP7, Kolkata Highway, Panjetty, Tamil Nadu 601204"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Vehicle Details Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Brand Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Brand Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/textvehiclebrand"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/plus"
                    android:hint="Enter the Vehicle Brand Name"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/LightGray" />

                <!-- Model No -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Model Number"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/brandnametxt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/plus"
                    android:hint="Enter the Vehicle Model Number"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/LightGray" />

                <!-- Registration No -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Registration Number"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/vehicleno"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/plus"
                    android:hint="Enter Registration Number"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/LightGray" />

                <!-- Issue Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Issue Title"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/issuetitle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/plus"
                    android:hint="Brief Title of the Issue"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/LightGray" />

                <!-- Issue Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="Detailed Description"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/plus"
                    android:gravity="top"
                    android:hint="Describe the issue with your vehicle in detail..."
                    android:inputType="textMultiLine"
                    android:maxLines="8"
                    android:minLines="4"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/LightGray" />

                <!-- Character Counter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/charCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plus"
                        android:text="0/500"
                        android:textColor="@color/LightGray"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/submit_button_bg"
                    android:fontFamily="@font/lato"
                    android:text="🚀 Submit Issue Report"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>