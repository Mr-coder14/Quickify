<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".selectshop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backButtonproductview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Shop"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22dp"/>

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/white_bg"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="9dp"
            android:id="@+id/mahalakshimi"
            android:layout_marginRight="9dp"
            android:padding="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/white_bg"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="84dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shoplogo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus"
                android:gravity="center"
                android:maxLines="1"
                android:text="Mahalakshimi Mechanic Shop"
                android:id="@+id/hjk"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
                app:layout_constraintTop_toTopOf="parent" />
            <RatingBar
                android:id="@+id/ratingBarreviewform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:stepSize="0.5"
                android:rating="0"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
                app:layout_constraintTop_toBottomOf="@+id/hjk"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="?android:attr/ratingBarStyleSmall"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/mahatick"
                android:src="@drawable/baseline_check_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/white_bg"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="9dp"
            android:id="@+id/rajkumar"
            android:layout_marginRight="9dp"
            android:padding="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/white_bg"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="84dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shoplogo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus"
                android:gravity="center"
                android:maxLines="1"
                android:text="RajKumar Mechanic Shop"
                android:id="@+id/hjk1"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat3"
                app:layout_constraintTop_toTopOf="parent" />
            <RatingBar
                android:id="@+id/ratingBarreviewform1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:stepSize="0.5"
                android:rating="0"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat3"
                app:layout_constraintTop_toBottomOf="@+id/hjk1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="?android:attr/ratingBarStyleSmall"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/rajtick"
                android:src="@drawable/baseline_check_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/white_bg"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="9dp"
            android:id="@+id/prasanth"
            android:layout_marginRight="9dp"
            android:padding="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/white_bg"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="84dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shoplogo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus"
                android:gravity="center"
                android:maxLines="1"
                android:text="Prasanth Mechanic Shop"
                android:id="@+id/hjk2"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat2"
                app:layout_constraintTop_toTopOf="parent" />
            <RatingBar
                android:id="@+id/ratingBarreviewform2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:stepSize="0.5"
                android:rating="0"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat2"
                app:layout_constraintTop_toBottomOf="@+id/hjk2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="?android:attr/ratingBarStyleSmall"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/prasanthtick"
                android:src="@drawable/baseline_check_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/white_bg"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="9dp"
            android:id="@+id/vasu"
            android:layout_marginRight="9dp"
            android:padding="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/white_bg"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="84dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shoplogo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus"
                android:gravity="center"
                android:maxLines="1"
                android:text="Vasu Mechanic Shop"
                android:id="@+id/hjk3"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat1"
                app:layout_constraintTop_toTopOf="parent" />
            <RatingBar
                android:id="@+id/ratingBarreviewform3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:stepSize="0.5"
                android:rating="0"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat1"
                app:layout_constraintTop_toBottomOf="@+id/hjk3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="?android:attr/ratingBarStyleSmall"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/vasutick"
                android:src="@drawable/baseline_check_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/submitbtn"
        android:textColor="@color/white"
        android:text="Confirm Issue"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>